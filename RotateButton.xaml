<UserControl x:Class="WpfApp3.RotateButton"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" 
             d:DesignWidth="800"
             x:Name="MyCoolButtonUC">
    <Grid>
        <Button Command="{Binding ElementName=MyCoolButtonUC,Path=TNCommand,UpdateSourceTrigger=PropertyChanged,
                        Mode=TwoWay}">
            <Button.RenderTransform>
                <RotateTransform Angle="0" CenterX="0.5" CenterY="0.5"/>
            </Button.RenderTransform>
            <Button.Triggers>

                


                <EventTrigger RoutedEvent="Button.Click">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(RotateTransform.Angle)"
                                             From="0" To="180" Duration="0:0:1" />
                            <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(RotateTransform.Angle)"
                                             From="180" To="0" Duration="0:0:1" BeginTime="0:0:1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>


            </Button.Triggers>
        </Button>
    </Grid>
</UserControl>
